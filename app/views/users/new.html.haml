%h2 Add a User
= simple_form_for(@user) do |f|
  = f.error_notification
  .inputs
    = f.input :email, required: true, autofocus: true
    = f.simple_fields_for @user.profile do |p|
      = p.input :first_name, required: true
      = p.input :last_name, required: true
    =# f.select :role_ids, @roles, multiple: true, required: true
    = f.select :role_ids, @roles.map {|role| [role.name, role.id]}, { include_blank: true }, required: true, multiple: 'multiple'
  .actions
    = link_to(content_tag('i', '', class: 'icon-arrow-left') + " Back", '#', class: 'btn')
    = f.button :submit, "Create User", class: 'btn-primary'
