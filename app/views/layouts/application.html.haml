!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta{ name: 'stripe-key', content: ::STRIPE_PUBLIC_KEY }
    %title= content_for?(:title) ? yield(:title) : "Microbiz"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    /%link(href="images/favicon.ico" rel="shortcut icon")
    /%link(href="images/apple-touch-icon.png" rel="apple-touch-icon")
    /%link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72")
    /%link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114")

  %body
    %div#ajax_indicator{ style: 'display: none;' }
      %span Loading...
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          = link_to 'Microbiz', root_path, class: 'brand'
          - if !user_signed_in?
            %ul.nav.pull-right
              %li
                = link_to 'Facebook', user_omniauth_authorize_path(:facebook)
              %li
                = link_to 'Google', user_omniauth_authorize_path(:google)
              %li
                = link_to 'Sign up', new_user_registration_path
              %li
                = link_to 'Sign in', new_user_session_path
          - else
            %ul.nav.pull-right
              %li.dropdown
                %a.dropdown-toggle{ 'data-toggle' => 'dropdown' }
                  = name_or_email(current_user)
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to 'My Account', edit_registration_path(current_user)
                  - if current_user.has_role? :owner
                    %li= link_to 'Plans & Billing', subscriptions_path
                  %li.divider
                  %li= link_to 'Sign Out', destroy_user_session_path, :method => :delete

    .container
      .row
        .span12
          - if flash[:notice].present?
            .alert.alert-block.alert-success
              %a.close{:data => { :dismiss => 'alert' }} x
              = flash[:notice]
          - if flash[:alert].present?
            .alert.alert-block
              %a.close{:data => { :dismiss => 'alert' }} x
              = flash[:alert]
          - if flash[:error].present?
            .alert.alert-error.alert-block
              %a.close{:data => { :dismiss => 'alert' }} x
              %ul
                - flash[:error].each do |error|
                  %li= error

      .content
        .row
          .span12
            = yield
      
      %br
      %footer
        %p &copy; Microbiz 2012
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "https://js.stripe.com/v1/", "application"

